<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/see_the_map"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Map"
        android:background="@drawable/border"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/add_home_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Add home address"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_below="@+id/see_the_map"/>

    <Button
        android:id="@+id/add_school_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Add school adress"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_below="@+id/add_home_address"/>

   <!-- <Button
        android:id="@+id/stop_location_tracking"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Stop location tracking"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_below="@+id/add_school_address"/>-->

    <Switch
        android:id="@+id/stop_location_tracking"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="LOCATION TRACKING"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/add_school_address"
        />

</RelativeLayout>
